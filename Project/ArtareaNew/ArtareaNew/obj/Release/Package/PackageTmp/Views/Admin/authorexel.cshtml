        </th>
        <th>
        profession
        </th>
        <th>
          photo
        </th>
        <th>
          leCode
        </th>
        <th></th>
    </tr>
@if(Model is null) {  } else { 
foreach (var item in Model) {
    <tr>
        <td>
         @item.name
        </td>
        <td>
           @item.surname
        </td>
        <td>
         @item.biography
        </td>
        <td>
            @item.profession
        </td>
        <td>
          @item.photo
        </td>
