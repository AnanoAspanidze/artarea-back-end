<!DOCTYPE html>

<html>

@using ArtareaNew.Helper;
@{
    var currentUser = LoginHelper.currentUser();
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("ArtareaNew", "Index", "Admin", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (currentUser == null)
                    {
                        <li><a href="@Url.Action("Login", "Account")">Login</a></li>
                    }
                    @if (currentUser != null)
                    {
                        <li><a href="@Url.Action("Logout", "Account")">Logout</a></li>
                        <li><a href="@Url.Action("authorexel", "Admin")">Author</a></li>
                        <li><a href="@Url.Action("categoryexel", "Admin")">Category</a></li>
                    }
                </ul>
            </div>
        </div>
    </div>
    @RenderBody()

    <div class="container body-content">
        <footer></footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>